package CreepInit
import Area
import GameConstants

int iterator = 0

public function initCreeps()
	let expt = GetExpiredTimer()
	AREA_LEFT_BOT.addSmallCreep(vec2(GetRandomReal(1, WIDTH-2.)*128, GetRandomReal(1, HEIGHT-2.)*128))
	
	iterator++
	if iterator > 30
		expt.release()
		return
	else
		expt.start(0.05, function initCreeps)